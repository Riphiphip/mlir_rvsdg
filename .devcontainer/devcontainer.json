{
	"build": {
		"dockerfile": "Dockerfile"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"llvm-vs-code-extensions.vscode-mlir",
				"ms-vscode.cmake-tools",
				"cheshirekow.cmake-format",
				"twxs.cmake",
				"GitHub.copilot",
				"ms-vscode.cpptools-extension-pack",
				"vadimcn.vscode-lldb"
			],
			"settings": {
				"cmake.configureOnOpen": true,
				"mlir.server_path": "/workspaces/mlir_rvsdg/build/bin/rvsdg-lsp-server",
				"mlir.tablegen_server_path": "/usr/bin/tblgen-lsp-server-16",
				"files.associations": {
